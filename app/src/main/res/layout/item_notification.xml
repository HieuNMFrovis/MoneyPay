<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/notification_image_item"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_list_notification"
        />
    <TextView
        android:id="@+id/item_notification_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_notification"
        android:textSize="12sp"

       android:layout_marginStart="12dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/notification_image_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/item_notification_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/text_time_notification"
        android:gravity="start"
        app:layout_constraintStart_toEndOf="@id/notification_image_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_notification_text"
        />


</androidx.constraintlayout.widget.ConstraintLayout>